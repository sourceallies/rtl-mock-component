{
  "name": "@sourceallies/rtl-mock-component",
  "version": "0.0.0-development",
  "description": "Helper to facilitate mocking components with @testing-library/react",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/sourceallies/rtl-mock-component.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "npm run jest && npm run vitest -- run",
    "jest": "jest",
    "vitest": "vitest",
    "compile": "tsc"
  },
  "engines": {
    "node": ">=12"
  },
  "author": "Paul Rowe <prowe@sourceallies.com>",
  "keywords": [
    "dom",
    "jsdom",
    "react",
    "testing-library",
    "testing",
    "ui",
    "unit"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "babel-jest": "^27.4.5",
    "jest": "^27.4.5",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "vitest": "^0.16.0"
  },
  "peerDependencies": {
    "@testing-library/react": "*",
    "react": "*",
    "react-dom": "*"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ],
    "testMatch": [
      "**/?(*.)+(jest).[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest-setup.ts"
    ]
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "bugs": {
    "url": "https://github.com/sourceallies/rtl-mock-component/issues"
  },
  "homepage": "https://github.com/sourceallies/rtl-mock-component#readme"
}
